{
  "compilerOptions": {
    "outDir": "./dist",             // Output compiled JS files to ./dist
    "rootDir": "./",                // Specify the root directory of input files
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts"                    // Include all TS files in the project
  ],
  "exclude": [
    "node_modules",
    "dist"                          // Exclude the dist folder to avoid re-compiling it
  ]
}

